<?xml version="1.0" encoding="UTF-8" ?>
<PermissionSet xmlns="http://soap.sforce.com/2006/04/metadata">
    <label>Case Management</label>
    <description
    >Permissions for Case Management app, including Vendor Case Manager functionality</description>

    <!-- Apex Class Access -->
    <classAccesses>
        <apexClass>VendorCalloutBatch</apexClass>
        <enabled>true</enabled>
    </classAccesses>
    <classAccesses>
        <apexClass>VendorCaseController</apexClass>
        <enabled>true</enabled>
    </classAccesses>

    <!-- Application Visibility -->
    <applicationVisibilities>
        <application>CaseManagement</application>
        <visible>true</visible>
    </applicationVisibilities>

